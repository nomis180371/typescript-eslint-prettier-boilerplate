{  
  "compilerOptions": {  
    "target": "es6",  
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",  
    "outDir": "./build",  
    "sourceMap": true,  
    "resolveJsonModule": true,  
     "lib": [
         "es5",
         "es6"
      ], 
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },  
  "include": [  
    "src/**/*.ts"  
  ],  
  "exclude": [  
    "node_modules"  
  ]  
} 
